#include <string>
#include <iostream>
using namespace std;
int main() {
	string name = "";
	string age = "";
	string favorite_food = "";
	string positive_phrase = "";
	cout << "Ingrese su nombre completo:\n";
	getline(cin, name);
	cout << "Ingrese su edad:\n";
	getline(cin, age);
	cout << "Ingrese su comida favorita:\n";
	getline(cin, favorite_food);
	cout << "Ingrese la frase positiva que mas le gusta:\n";
	getline(cin, positive_phrase);
	cout << "\n";
	cout << "-DATOS DEL USUARIO-\n";
	cout << "Nombre: " << name << "\n";
	cout << "Edad: " << age << "\n";
	cout << "Comida favorita: " << favorite_food << "\n\n";
	cout << "El Sr. o Sra. " << name << " nos deja esta frase positiva: " << positive_phrase << "\n";
	cout << "REGISTRO COMPLETADO!";
	return 0;
}
